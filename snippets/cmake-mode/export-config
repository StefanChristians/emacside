# -*- mode: snippet -*-
# name: export-config
# key: export-config
# --
@PACKAGE_INIT@

# Load all exported targets
include("\$\{CMAKE_CURRENT_LIST_DIR\}/${1:`(ide-common-get-project-machine-name)`}-targets.cmake")

# mark found components
foreach(comp IN LISTS ${1:`(ide-common-get-project-machine-name)`}_FIND_COMPONENTS)
  if(TARGET ${1:`(ide-common-get-project-machine-name)`}::\$\{comp\})
    set(${1:`(ide-common-get-project-machine-name)`}_\$\{comp\}_FOUND TRUE)
  else()
    set(${1:`(ide-common-get-project-machine-name)`}_\$\{comp\}_FOUND FALSE)
    message(STATUS "could not find package ${1:`(ide-common-get-project-machine-name)`}::\$\{comp\}")
  endif()
endforeach()

check_required_components(${1:`(ide-common-get-project-machine-name)`})$0